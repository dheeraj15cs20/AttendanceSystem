<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#20B2AA"
        android:src="@drawable/ic_android_black_24dp" />

    <TextView
        android:id="@+id/textAddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="  Add Student"
        android:textColor="#20B2AA"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEnterRegistrationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="19dp"
        android:textColor="#20B2AA"
        android:textSize="20sp"
        android:text="Enter Registration Number:" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textEnterRegistrationNumber"
        android:layout_marginTop="16dp"
        android:textColor="#20B2AA"
        android:backgroundTint="#20B2AA"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/Name"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/Cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="Cancel"
            android:textColor="#20B2AA" />

        <Button
            android:id="@+id/Nextbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="Next"
            android:textColor="#20B2AA" />
    </LinearLayout>

</android.widget.RelativeLayout>